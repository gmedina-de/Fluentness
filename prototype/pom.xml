<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <parent>
        <artifactId>fluentness</artifactId>
        <groupId>org.fluentness</groupId>
        <version>0.1.0</version>
    </parent>

    <artifactId>prototype</artifactId>

    <!--Even if packaging is set to apk, a ready-to-use jar file (for non-Android platforms) will be generated-->
    <packaging>apk</packaging>

    <dependencies>
        <dependency>
            <groupId>org.fluentness</groupId>
            <artifactId>framework</artifactId>
            <version>0.1.0</version>
        </dependency>

    </dependencies>

    <build>
        <plugins>

            <!--In order to make standalone apps, assembly plugin is used instead of jar, for including dependencies-->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-assembly-plugin</artifactId>
                <executions>
                    <execution>
                        <!--Generate fat jar (jar-with-dependencies) by default alongside with normal jar-->
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <archive>
                        <index>true</index>
                        <manifest>
                            <addClasspath>true</addClasspath>
                            <!--Replace with your own-->
                            <mainClass>com.sample.WorkStation</mainClass>
                        </manifest>
                    </archive>
                    <descriptorRefs>
                        <descriptorRef>jar-with-dependencies</descriptorRef>
                    </descriptorRefs>
                </configuration>
            </plugin>

            <!--It's always nice to have some auto-generated docs-->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-javadoc-plugin</artifactId>
                <version>3.1.1</version>
            </plugin>

            <!--Essential configurations for Android builds-->
            <plugin>
                <groupId>com.simpligility.maven.plugins</groupId>
                <artifactId>android-maven-plugin</artifactId>
                <version>4.6.0</version>
                <extensions>true</extensions>
                <configuration>
                    <dexMultiDex>true</dexMultiDex>
                    <!-- Older version of this plugin used dex android "compiler" by default, which is
                    incompatible with Java 8 (lambdas, default methods in interfaces). Now it uses d8 -->
                    <dexCompiler>d8</dexCompiler>
                    <sdk>
                        <!-- API Level 29 doesn't work at the moment -->
                        <platform>28</platform>
                        <!-- Replace with your own path-->
                        <path>/home/germede/Android/Sdk</path>
                    </sdk>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>