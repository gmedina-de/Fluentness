<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <parent>
        <artifactId>fluentness</artifactId>
        <groupId>org.fluentness</groupId>
        <version>${revision}</version>
    </parent>

    <artifactId>prototype</artifactId>

    <!--Even if packaging is set to apk, a ready-to-use jar file (for non-Android platforms) will be generated-->
    <packaging>apk</packaging>

    <dependencies>
        <dependency>
            <groupId>org.fluentness</groupId>
            <artifactId>fn-core</artifactId>
            <version>${revision}</version>
        </dependency>
        <dependency>
            <groupId>org.fluentness</groupId>
            <artifactId>fn-desktop</artifactId>
            <version>${revision}</version>
        </dependency>
        <dependency>
            <groupId>org.fluentness</groupId>
            <artifactId>fn-game</artifactId>
            <version>${revision}</version>
        </dependency>
        <dependency>
            <groupId>org.fluentness</groupId>
            <artifactId>fn-mobile</artifactId>
            <version>${revision}</version>
        </dependency>
        <dependency>
            <groupId>org.fluentness</groupId>
            <artifactId>fn-web</artifactId>
            <version>${revision}</version>
        </dependency>

        <dependency>
            <groupId>mysql</groupId>
            <artifactId>mysql-connector-java</artifactId>
            <version>8.0.17</version>
        </dependency>
        <dependency>
            <groupId>org.fluentness</groupId>
            <artifactId>fn-web</artifactId>
            <version>0.1.0</version>
            <scope>compile</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>

            <!--In order to make standalone jars, assembly plugin is used for including dependencies-->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-assembly-plugin</artifactId>
                <version>2.2-beta-5</version>
                <executions>
                    <execution>
                        <!--Generate fat jar (jar-with-dependencies) by default alongside with normal jar-->
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <archive>
                        <index>true</index>
                        <manifest>
                            <addClasspath>true</addClasspath>
                            <!--Replace with your own-->
                            <mainClass>com.sample.WorkStation</mainClass>
                        </manifest>
                    </archive>
                    <descriptorRefs>
                        <descriptorRef>jar-with-dependencies</descriptorRef>
                    </descriptorRefs>
                </configuration>
            </plugin>

            <!--In order to build android apks, deploy and run them-->
            <plugin>
                <groupId>com.simpligility.maven.plugins</groupId>
                <artifactId>android-maven-plugin</artifactId>
                <version>4.6.0</version>
                <extensions>true</extensions>
                <configuration>
                    <!--Older version of this plugin used dex android "compiler" by default, which is
                    incompatible with Java 8 (lambdas, default methods in interfaces). Now it uses d8-->
                    <dexCompiler>d8</dexCompiler>
                    <dexMultiDex>true</dexMultiDex>
                    <sdk>
                        <!--Only works with API level 28-->
                        <platform>28</platform>
                        <!--Replace with your own path or export ANDROID_HOME-->
                        <path>/home/germede/Android/Sdk</path>
                    </sdk>
                    <artifactSet>
                        <excludes>
                            <exclude>mysql:mysql-connector-java:8.0.17</exclude>
                        </excludes>
                    </artifactSet>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>