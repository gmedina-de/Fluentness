<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <parent>
        <artifactId>fluentness</artifactId>
        <groupId>org.fluentness</groupId>
        <version>${revision}</version>
    </parent>

    <artifactId>prototype</artifactId>

    <packaging>${packaging}</packaging>

    <properties>
        <!--Default properties that may be overwritten by profiles-->
        <mainClass>com.sample.Console</mainClass>
        <packaging>jar</packaging>
        <lwjgl.version>3.2.3</lwjgl.version>
        <platform>linux</platform>
    </properties>

    <dependencies>
        <!--Framework dependencies-->
        <dependency>
            <groupId>org.fluentness</groupId>
            <artifactId>fn-core</artifactId>
            <version>${revision}</version>
        </dependency>
        <dependency>
            <groupId>org.fluentness</groupId>
            <artifactId>fn-desktop</artifactId>
            <version>${revision}</version>
        </dependency>
        <dependency>
            <groupId>org.fluentness</groupId>
            <artifactId>fn-game</artifactId>
            <version>${revision}</version>
        </dependency>
        <dependency>
            <groupId>org.fluentness</groupId>
            <artifactId>fn-mobile</artifactId>
            <version>${revision}</version>
        </dependency>
        <dependency>
            <groupId>org.fluentness</groupId>
            <artifactId>fn-web</artifactId>
            <version>${revision}</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <!--In order to make standalone jars, assembly plugin is used for including all dependencies-->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-assembly-plugin</artifactId>
                <version>2.2-beta-5</version>
                <executions>
                    <execution>
                        <!--Generate fat jar (jar-with-dependencies) by default alongside with normal jar-->
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <finalName>${project.artifactId}-${project.version}-${project.activeProfiles[0].id}</finalName>
                    <archive>
                        <index>true</index>
                        <manifest>
                            <addClasspath>true</addClasspath>
                            <mainClass>${mainClass}</mainClass>
                        </manifest>
                    </archive>
                    <descriptorRefs>
                        <descriptorRef>jar-with-dependencies</descriptorRef>
                    </descriptorRefs>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <id>console</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
        </profile>

        <profile>
            <id>desktop</id>
            <properties>
                <mainClass>com.sample.Desktop</mainClass>
            </properties>
            <dependencies>
                <dependency>
                    <groupId>mysql</groupId>
                    <artifactId>mysql-connector-java</artifactId>
                    <version>8.0.17</version>
                </dependency>
            </dependencies>
        </profile>

        <profile>
            <id>game</id>
            <properties>
                <mainClass>com.sample.Game</mainClass>
                <lwjgl.version>3.2.3</lwjgl.version>
                <platform>linux</platform>
            </properties>
            <dependencies>
                <!--lwjgl native libraries-->
                <dependency>
                    <groupId>org.lwjgl</groupId>
                    <artifactId>lwjgl</artifactId>
                    <version>${lwjgl.version}</version>
                    <classifier>natives-${platform}</classifier>
                </dependency>
                <dependency>
                    <groupId>org.lwjgl</groupId>
                    <artifactId>lwjgl-opengl</artifactId>
                    <version>${lwjgl.version}</version>
                    <classifier>natives-${platform}</classifier>
                </dependency>
                <dependency>
                    <groupId>org.lwjgl</groupId>
                    <artifactId>lwjgl-glfw</artifactId>
                    <version>${lwjgl.version}</version>
                    <classifier>natives-${platform}</classifier>
                </dependency>
            </dependencies>
        </profile>

        <profile>
            <id>mobile</id>
            <properties>
                <mainClass>com.sample.Mobile</mainClass>
                <packaging>apk</packaging>
            </properties>
            <dependencies>
                <dependency>
                    <groupId>com.google.android</groupId>
                    <artifactId>android</artifactId>
                    <version>4.1.1.4</version>
                    <scope>provided</scope>
                </dependency>
            </dependencies>
            <build>
                <plugins>
                    <plugin>
                        <groupId>com.simpligility.maven.plugins</groupId>
                        <artifactId>android-maven-plugin</artifactId>
                        <version>4.6.0</version>
                        <extensions>true</extensions>
                        <configuration>
                            <!--Older version of this plugin used dex android "compiler" by default, which is
                            incompatible with Java 8 (lambdas, default methods in interfaces). Now it uses d8-->
                            <dexCompiler>d8</dexCompiler>
                            <dexMultiDex>true</dexMultiDex>
                            <sdk>
                                <!--Only works with API level 28-->
                                <platform>28</platform>
                                <!--Replace with your own path or export ANDROID_HOME-->
                                <path>/home/germede/Android/Sdk</path>
                            </sdk>
                            <artifactSet>
                                <excludes>
                                    <exclude>mysql:mysql-connector-java:8.0.17</exclude>
                                    <exclude>org.lwjgl:lwjgl:3.2.3</exclude>
                                    <exclude>org.lwjgl:lwjgl-opengl:3.2.3</exclude>
                                    <exclude>org.lwjgl:lwjgl-glfw:3.2.3</exclude>
                                </excludes>
                            </artifactSet>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>

        <profile>
            <id>web</id>
            <properties>
                <mainClass>com.sample.Web</mainClass>
            </properties>
            <dependencies>
                <dependency>
                    <groupId>mysql</groupId>
                    <artifactId>mysql-connector-java</artifactId>
                    <version>8.0.17</version>
                </dependency>
            </dependencies>
<!--            todo exclude resources which aren't being used, maybe in the fn-components-->
        </profile>
    </profiles>
</project>


