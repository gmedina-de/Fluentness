<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">
    <persistence-unit name="default">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <properties>
            <property name="eclipselink.jdbc.url" value="jdbc:mysql://localhost:3306/party?serverTimezone=UTC" />
            <property name="eclipselink.jdbc.driver" value="com.mysql.cj.jdbc.Driver" />
            <property name="eclipselink.jdbc.user" value="party" />
            <property name="eclipselink.jdbc.password" value="party" />
            <property name="eclipselink.logging.level" value="FINE"/>
        </properties>

        <class>com.sample.data.Dummy</class>
    </persistence-unit>
</persistence>
